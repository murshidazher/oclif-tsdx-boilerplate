{
  "name": "@murshidazher/oclif-tsdx-boilerplate",
  "description": "A simple CLI boilerplate for making lot of things happen.",
  "author": "Murshid Azher <hello@murshidazher.com> (https://murshidazher.com/)",
  "version": "0.0.0",
  "license": "MIT",
  "homepage": "https://github.com/murshidazher/oclif-tsdx-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/murshidazher/oclif-tsdx-boilerplate.git"
  },
  "main": "dist/index.js",
  "bin": {
    "ocliftsdx": "./bin/run"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "bugs": "https://github.com/murshidazher/oclif-tsdx-boilerplate/issues",
  "dependencies": {
    "@oclif/core": "1.3.4",
    "@oclif/plugin-help": "5.1.11",
    "@oclif/plugin-plugins": "2.1.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.26.10",
    "@oclif/test": "2.1.0",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.18",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "@vercel/ncc": "0.33.3",
    "chai": "4.3.6",
    "eslint": "8.9.0",
    "eslint-config-oclif": "4.0.0",
    "eslint-config-oclif-typescript": "1.0.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "mocha": "9.2.0",
    "oclif": "2.4.5",
    "prettier": "2.5.1",
    "shx": "0.3.4",
    "ts-node": "10.5.0",
    "tslib": "2.3.1",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "ocliftsdx",
    "dirname": "ocliftsdx",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      },
      "goodbye": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pr"
    }
  },
  "scripts": {
    "start": "ts-node src/start.ts",
    "compile": "ncc build src/index.ts --no-source-map-register -e @oclif/core/flush -e @oclif/core/handle --out compiled --license LICENSE",
    "build": "shx rm -f tsconfig.tsbuildinfo && shx rm -rf dist && tsc -b",
    "build:ncc": "yarn compile",
    "pr": "yarn typecheck && yarn test && yarn lint:fix && yarn build",
    "lint": "eslint src --ext .ts --config .eslintrc",
    "lint:fix": "yarn lint --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && yarn run version",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "npx oclif-dev manifest && npx oclif readme",
    "mdlint:fix": "npx markdownlint-cli --ignore _book --ignore node_modules **/*.md",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "cli",
    "oclif",
    "typescript",
    "boilerplate",
    "tsdx",
    "auto-release"
  ],
  "types": "dist/index.d.ts"
}
